{% if is_paginated %}
{% load i18n %}
<div class="pagination pagination-inverse">
    {% if page_obj.has_previous %}
        <a href="?page={{ page_obj.previous_page_number }}{{ getvars }}{{ hashtag }}" class="btn btn-inverse previous">{% trans "上一页" %}</a>
    {% else %}
        <span class="disabled prev">{#{% trans "上一页" %}#}</span>
    {% endif %}
    <ul>
    {% for page in pages %}
        {% if page %}
            {% ifequal page page_obj.number %}
                <li class="active"><a href="#">{{ page }}</a></li>
            {% else %}
                <li>
                <a href="?page={{ page }}{{ getvars }}{{ hashtag }}" class="page">{{ page }}</a>
                </li>
            {% endifequal %}
        {% else %}
            ...
        {% endif %}
    {% endfor %}
    </ul>
    {% if page_obj.has_next %}
        <a href="?page={{ page_obj.next_page_number }}{{ getvars }}{{ hashtag }}" class="next btn btn-inverse">{% trans "下一页" %}</a>
    {% else %}
        <span class="disabled next">{#{% trans "下一页" %}#}</span>
    {% endif %}
</div>
{% endif %}
